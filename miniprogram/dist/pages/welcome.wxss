.welcome-page .top {
  position: fixed;
  left: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.welcome-page .top .title {
  width: 550rpx;
  height: 300rpx;
}
.welcome-page .top .button image {
  width: 300rpx;
  height: 150rpx;
  margin-top: 40rpx;
}
@media (max-height: 500px) {
  .welcome-page .top .button image {
    margin-top: 20rpx;
  }
}
.welcome-page .bottom {
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.welcome-page .bottom .info {
  height: 300rpx;
}
@media (max-height: 500px) {
  .welcome-page .bottom .info {
    margin-bottom: 200rpx;
  }
}
.welcome-page .bottom .pic {
  width: 750rpx;
  height: 400rpx;
  align-self: flex-end;
}
@media (max-height: 500px) {
  .welcome-page .bottom .pic {
    display: none;
  }
}
