    view.top
      image.title(src="cloud://seu-dsgq-0.7365-seu-dsgq-0/resources/title.png" mode="aspectFit")
      view.button(@tap="enter")
        image(src="cloud://seu-dsgq-0.7365-seu-dsgq-0/resources/welcome-button.png" mode="aspectFit")
