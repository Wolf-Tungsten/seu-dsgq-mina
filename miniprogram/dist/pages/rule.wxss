.rule-page {
  position: fixed;
  left: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.rule-page .title {
  width: 650rpx;
  height: 200rpx;
}
.rule-page .first {
  margin: 10rpx 60rpx;
  align-self: stretch;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 40rpx;
  text-indent: 2em;
}
.rule-page .text {
  margin: 10rpx 60rpx;
  align-self: stretch;
  font-size: 30rpx;
  color: #333;
}
.rule-page .button {
  width: 514rpx;
  height: 94rpx;
  margin-top: 50rpx;
}
