.welcome-page .top {
  position: fixed;
  left: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.welcome-page .top .title {
  width: 550rpx;
  height: 300rpx;
}
.welcome-page .top .button {
  border: none;
}
.welcome-page .top .button image {
  width: 300rpx;
  height: 150rpx;
  margin-top: 40rpx;
}
.welcome-page .top .info {
  height: 300rpx;
}
.welcome-page .bottom {
  position: fixed;
  bottom: 0rpx;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.welcome-page .bottom .pic {
  width: 750rpx;
  height: 400rpx;
  align-self: flex-end;
  opacity: 0.4;
  z-index: -1;
}
