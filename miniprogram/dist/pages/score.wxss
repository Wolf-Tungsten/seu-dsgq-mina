.score-page {
  position: fixed;
  left: 0;
  top: 0;
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.score-page .title {
  width: 350rpx;
  height: 100rpx;
  margin-top: 80rpx;
}
@media (max-height: 500px) {
  .score-page .title {
    margin-top: 10rpx;
    display: none;
  }
}
.score-page .button {
  margin-top: 30rpx;
  width: 350rpx;
  height: 100rpx;
}
.score-page .background {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 750rpx;
  height: 913rpx;
  z-index: -1;
}
.score-page .background image {
  position: absolute;
  width: 750rpx;
  height: 913rpx;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -1;
}
.score-page .background .score {
  position: absolute;
  left: 375rpx;
  top: 200rpx;
  font-size: 30rpx;
  color: #CB2428;
  font-weight: bold;
  transform: rotate(10deg) translateX(-40%) translateY(-40%);
}
