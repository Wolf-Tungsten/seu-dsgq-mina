<script>
  import wepy from 'wepy'

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '东南大学党史国情知识竞赛'
    }
    components = {
    }

    data = {
    }

    computed = {
      now () {
        return +new Date()
      }
    }

    methods = {
      async enter(){
        wx.showLoading()
        let result = await wx.cloud.callFunction({
          name:'idsAuth'
        })
        console.log(result)
        wx.hideLoading()
        if (!result.result.success && result.result.reason === 'unauthorized') {
          // 未进行账号绑定，跳转到auth页面
          this.$navigate('./auth')
        } else {
          console.log('身份认证成功')
          let submitResult = await wx.cloud.callFunction({
            name:'getScore'
          })
          console.log(submitResult)
          if (!submitResult.result.submit) {
            this.$redirect('./rule')
          } else {
            wx.setStorageSync('result', submitResult.result)
            this.$navigate('./score')
          }
        }

      }
    }

    events = {
      'index-emit': (...args) => {
        let $event = args[args.length - 1]
        console.log(`${this.$name} receive ${$event.name} from ${$event.source.$name}`)
      }
    }

    onLoad() {
    }
  }
</script>
